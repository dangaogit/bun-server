{
  "name": "@dangao/bun-server",
  "version": "1.3.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dangaogit/bun-server.git"
  },
  "keywords": [
    "bun",
    "server",
    "framework",
    "di",
    "logger",
    "middleware"
  ],
  "files": [
    "dist",
    "readme.md",
    "LICENSE",
    "src",
    "tests",
    "docs"
  ],
  "author": "dangaogit",
  "license": "MIT",
  "homepage": "https://github.com/dangaogit/bun-server",
  "bugs": {
    "url": "https://github.com/dangaogit/bun-server/issues"
  },
  "engines": {
    "bun": ">=1.3.3"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "bundle": "bun build src/index.ts --target=bun --format=esm --outfile=dist/index.js --external reflect-metadata --external @dangao/logsmith",
    "dts": "tsc -p tsconfig.build.json",
    "build": "bun run clean && bun run bundle && bun run dts",
    "prepare": "bun run build",
    "publish:package": "cp -r ../../README.md ../../LICENSE ../../docs . && bun publish --access public && rm -rf ./README.md ./LICENSE ./docs"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "@types/bun": "catalog:"
  },
  "dependencies": {
    "reflect-metadata": "catalog:",
    "@dangao/logsmith": "workspace:*"
  }
}